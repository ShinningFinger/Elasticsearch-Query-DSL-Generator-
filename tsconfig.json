{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": false,
    "rootDir": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}