{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "target": "es2017",
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declarationMap": true
  },
  "exclude": ["dist", "node_modules"]
}
